<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".Activities.MovieDetails">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:keepScreenOn="true"
        android:minWidth="50dp"
        android:minHeight="50dp" />

    <ImageView
        android:id="@+id/coverImageID"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/posterImageID"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:layout_below="@+id/coverImageID"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="-35dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/movieNameID"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coverImageID"
        android:layout_alignStart="@+id/posterImageID"
        android:layout_alignParentStart="true"
        android:paddingHorizontal="12dp"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/directedByID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieNameID"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:text="@string/directed_by"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/directedID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/directedByID"
        android:paddingHorizontal="12dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yearReleaseID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/directedID"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/durationID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/directedID"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/yearReleaseID"
        android:paddingHorizontal="12dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tagLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durationID"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/overviewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tagLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="12dp"
        android:textColor="@color/white" />


</RelativeLayout>
